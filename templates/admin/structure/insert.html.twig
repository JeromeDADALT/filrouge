{% extends 'admin/common/base.html.twig' %}

{% block title %}Création de structure{% endblock %}

{% form_theme formStructure 'bootstrap_4_layout.html.twig' %}

{% block structure %}
    <div class="d-flex justify-content-center">
    {# pour afficher le formulaire j'utilise form_start() et form_end() en passant la variable qui contient le formulaire #}
    {{ form_start(formStructure) }}
        {{ form_row(formStructure.nameStructure, {'label': 'Nom de la structure*'}) }}
        {{ form_row(formStructure.cityStructure, {'label': 'Ville*'}) }}
        {{ form_row(formStructure.phoneStructure, {'label': 'Téléphone'}) }}
        {{ form_row(formStructure.linkStructure, {'label': 'Site web'}) }}
        {{ form_row(formStructure.commentStructure, {'label': 'Commentaire'}) }}
    {{ form_end(formStructure) }}
    </div>
{% endblock %}