{% extends 'admin/common/base.html.twig' %}

{% block title %}Fiche structure{% endblock %}

{% block structure %}
    <h1>Fiche structure</h1>
    <main class="d-flex justify-content-center m-3">
        <div class="col-6 d-flex flex-column justify-content-center align-items-center mb-5 aliceblueBackground">
            <h2>{{ structure.nameStructure }}</h2>
            <p>{{ structure.cityStructure }}</p>
            <p>{{ structure.phoneStructure }}</p>
            <p>Site web :
                <a href="{{ structure.linkStructure }}" target = "_blank">{{ structure.nameStructure }}</a>
            </p>
            <p>Informations : {{ structure.commentStructure }}</p>
            <a href="{{ path('admin_update_structure', {'id' : structure.id}) }}">Modifier</a>
            <a href="{{ path('admin_delete_structure', {'id' : structure.id}) }}">Supprimer</a>
        </div>
    </main>
{% endblock %}