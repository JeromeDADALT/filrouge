{% extends 'admin/common/base.html.twig' %}

{% block title %}Fiche joueur{% endblock %}

{% block user %}
    <h1>Fiche utilisateur</h1>
    <main class="d-flex justify-content-center m-3">
        <div class="col-6 d-flex flex-column justify-content-center align-items-center aliceblueBackground">
            <h2>{{ user.firstName }}</h2>
            <p>{{ user.email }}</p>
            <p>{{ user.phoneUser }}</p>
            {% if user.photo %}
                <div>
                    <img class="img-fluid" src="{{ asset('img/upload/' ~ user.photo) }}" alt="photo de profil">
                </div>
            {% endif %}
            <p>{{ user.cityUser }}</p>
            <p>{{ user.commentUser }}</p>
            <p>Compte actif : {{ user.enable }}</p>
            {#je rajoute le niveau du joueur situé dans l'entité Level en faisant une boucle
            dans le champs level de la table User, pour chaque champs level, j'affiche le niveau "levelUser" de la table level#}
            {% for level in user.level %}
                <p>{{ level.levelUser }}</p>
            {% endfor %}
            {% for day in user.day %}
                <p>{{ day.dayUser }}</p>
            {% endfor %}
            {% for hour in user.hour %}
                <p>{{ hour.hourUser }}</p>
            {% endfor %}
            {% for structure in user.structure %}
                <p>{{ structure.nameStructure }}</p>
            {% endfor %}
            <a href="{{ path('admin_update_user', {'id' : user.id}) }}">Modifier</a>
            <a href="{{ path('admin_delete_user', {'id' : user.id}) }}">Supprimer</a>
        </div>
    </main>
{% endblock %}