{% extends 'front/common/base.html.twig' %}

{% block title %}Recherche mot clé{% endblock %}

{% block structure %}
    <h1>Liste des structures de Padel en Gironde</h1>
    <div>
        <form method="get" action="{{ path('front_structure_search') }}">
            <h2>Recherche par nom ou ville</h2>
            <input type="text" name="word" placeholder="Entrez un nom ou une ville">
            <button type="submit">Rechercher</button>
        </form>
    </div>
    <p>Résultat(s) de la recherche sur le nom ou la ville : {{ word }}</p>

    <main>
        {% for structure in structures %}
            <div>
                <h2>{{ structure.nameStructure }}</h2>
                <p>Ville : {{ structure.cityStructure }}</p>
                <p>Téléphone : {{ structure.phoneStructure }}</p>
                <p>Site web :
                    <a href="{{ structure.linkStructure }}" target = "_blank">{{ structure.nameStructure }}</a>
                </p>
                <p>Informations : {{ structure.commentStructure }}</p>
            </div>
        {% else %}
            <p>Il n'y a pas de résultat pour cette recherche</p>
        {% endfor %}
    </main>
{% endblock %}