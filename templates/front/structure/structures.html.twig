{% extends 'front/common/base.html.twig' %}

{% block title %}Les structures{% endblock %}

{% block structure %}
    <main class="p3">
        <h1 class="pb3 colorLB">Les structures de Padel en Gironde</h1>
        {# formulaire de recherche par mot-clé#}
        <div class="pb3 searchStructure">
            <form method="get" action="{{ path('front_structure_search') }}">
                <h2 class="inline">Recherche par nom ou ville</h2>
                <input type="text" name="word" placeholder="Entrez un nom ou une ville" class="width30">
                <button type="submit">Rechercher</button>
            </form>
        </div>
        <section>
        {# j'ajoute le filtre sort pour avoir la liste des résultats par ordre alphabétique #}
        {% for structure in structures|sort((a, b) => a.nameStructure <=> b.nameStructure)%}
            <div class="xLarge-3 large-3 medium-5 small-12 xSmall-12 p1 frameStructure">
                <a href="{{ structure.linkStructure }}" target = "_blank" class="colorLB">
                    <h1 class="titres30">{{ structure.nameStructure }}</h1>
                </a>
                <p>
                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 32 32">
                        <path d="M16 0c-5.523 0-10 4.477-10 10 0 10 10 22 10 22s10-12 10-22c0-5.523-4.477-10-10-10zM16 16c-3.314 0-6-2.686-6-6s2.686-6 6-6 6 2.686 6 6-2.686 6-6 6z"></path>
                    </svg> {{ structure.cityStructure }}
                </p>
                <p>
                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 32 32">
                        <path d="M15.331 19.76c-0.026-0.018-3.034-5.075-3.044-5.14-0.622-1.359-1.124-2.749-0.078-3.366l-4.341-7.32c-1.125 0.841-4.307 5.405 1.649 15.748 6.274 10.9 12.245 10.447 13.442 9.709l-4.23-7.145c-1 0.588-1.842-0.381-3.398-2.486zM25.862 26.617l0.001-0.006c0 0-3.303-5.566-3.305-5.568-0.262-0.441-0.825-0.58-1.264-0.324l-2.024 1.197 4.242 7.166c0 0 2.024-1.191 2.023-1.195h0.004c0.465-0.276 0.572-0.846 0.323-1.27zM14.786 9.736v-0.004c0.465-0.275 0.574-0.845 0.325-1.265l0.002-0.006c0 0-3.398-5.729-3.4-5.73-0.261-0.443-0.826-0.58-1.263-0.324l-2.024 1.197 4.336 7.324c0 0 2.023-1.189 2.024-1.192z"></path>
                    </svg> {{ structure.phoneStructure }}
                </p>
                <p class="font18">{{ structure.commentStructure }}</p>
            </div>
        {% endfor %}
        </section>
    </main>
{% endblock %}